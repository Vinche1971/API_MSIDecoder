<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout 
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    tools:context=".MainActivity">

    <!-- PreviewView for camera display -->
    <androidx.camera.view.PreviewView
        android:id="@+id/previewView"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:scaleType="fillCenter" />

    <!-- T-008: ROI Overlay for barcode detection zones -->
    <com.msidecoder.scanner.ui.RoiOverlayView
        android:id="@+id/roiOverlay"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Metrics overlay -->
    <com.msidecoder.scanner.ui.MetricsOverlayView
        android:id="@+id/metricsOverlay"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Control buttons container -->
    <LinearLayout
        android:id="@+id/controlsContainer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="24dp"
        android:orientation="horizontal"
        android:gravity="center"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <!-- Torch Button -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/fabTorch"
            android:layout_width="56dp"
            android:layout_height="56dp"
            android:layout_marginEnd="16dp"
            android:text="T"
            android:textColor="@android:color/white"
            android:textSize="18sp"
            android:textStyle="bold"
            android:minWidth="0dp"
            android:minHeight="0dp"
            android:insetTop="0dp"
            android:insetBottom="0dp"
            android:insetLeft="0dp"
            android:insetRight="0dp"
            android:contentDescription="@string/torch_off"
            style="@style/Widget.Material3.Button" />

        <!-- Start/Stop Scanner Button -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/fabStartStop"
            android:layout_width="120dp"
            android:layout_height="48dp"
            android:text="@string/start_scanner"
            android:textColor="@android:color/white"
            android:backgroundTint="@color/teal_700"
            app:icon="@drawable/ic_play"
            app:iconTint="@android:color/white"
            app:iconGravity="textStart"
            style="@style/Widget.Material3.Button" />

        <!-- Zoom Button -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/fabZoom"
            android:layout_width="56dp"
            android:layout_height="56dp"
            android:layout_marginStart="16dp"
            android:text="1"
            android:textColor="@android:color/white"
            android:textSize="18sp"
            android:textStyle="bold"
            android:minWidth="0dp"
            android:minHeight="0dp"
            android:insetTop="0dp"
            android:insetBottom="0dp"
            android:insetLeft="0dp"
            android:insetRight="0dp"
            android:contentDescription="@string/zoom_1x"
            style="@style/Widget.Material3.Button" />

        <!-- T-007: Snapshot Button -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/fabSnapshot"
            android:layout_width="56dp"
            android:layout_height="56dp"
            android:layout_marginStart="16dp"
            android:text="SS"
            android:textColor="@android:color/white"
            android:textSize="16sp"
            android:textStyle="bold"
            android:minWidth="0dp"
            android:minHeight="0dp"
            android:insetTop="0dp"
            android:insetBottom="0dp"
            android:insetLeft="0dp"
            android:insetRight="0dp"
            android:contentDescription="Snapshot debug"
            style="@style/Widget.Material3.Button" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>